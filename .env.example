# FinScribe AI Backend Configuration

# Model mode: mock | local | remote
MODEL_MODE=mock

# Maximum upload size in MB
MAX_UPLOAD_MB=50

# API URL for frontend
VITE_API_URL=http://localhost:8000

# Redis (for production task queue)
REDIS_URL=redis://localhost:6379

# Database (for production)
DATABASE_URL=postgresql://user:pass@localhost:5432/finscribe

# MinIO/S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=finscribe-documents

# IMAP Email Ingestion (optional)
IMAP_HOST=
IMAP_USER=
IMAP_PASS=
IMAP_FOLDER=INBOX

# Observability
LOG_LEVEL=INFO
METRICS_ENABLED=true
