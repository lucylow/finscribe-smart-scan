# FinScribe AI Backend Configuration

# ====== Model Configuration ======
# Model mode: mock | local | remote
MODEL_MODE=mock

# PaddleOCR-VL vLLM Server
PADDLEOCR_VLLM_URL=http://localhost:8001/v1
PADDLEOCR_TIMEOUT=30

# ERNIE 4.5 VLM vLLM Server
ERNIE_VLLM_URL=http://localhost:8002/v1
ERNIE_TIMEOUT=60

# ====== Storage Configuration ======
UPLOAD_DIR=/tmp/finscribe_uploads
STAGING_DIR=/tmp/finscribe_staging
MAX_UPLOAD_MB=20

# ====== Validation ======
MIN_CONFIDENCE=0.7
ARITHMETIC_TOLERANCE=0.01

# ====== Active Learning ======
ACTIVE_LEARNING_ENABLED=true
ACTIVE_LEARNING_FILE=./active_learning.jsonl

# ====== API URL for frontend ======
VITE_API_URL=http://localhost:8000

# ====== Database & Redis ======
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/finscribe
REDIS_URL=redis://redis:6379/0

# ====== MinIO/S3 Storage ======
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=finscribe-documents

# ====== IMAP Email Ingestion (optional) ======
IMAP_HOST=
IMAP_USER=
IMAP_PASS=
IMAP_FOLDER=INBOX

# ====== Observability ======
LOG_LEVEL=INFO
METRICS_ENABLED=true
RATE_LIMIT_PER_MINUTE=30
